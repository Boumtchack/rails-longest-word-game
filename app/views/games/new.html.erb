<h1>New Game</h1>
<%# <p>Find me in app/views/games/new.html.erb</p> %>
<div class="letters_container">
  <% @letter_list.each do |letter| %>
    <div class="letter_box"><p><%=letter%></p></div>
  <% end %>
</div>

<div class="form_container">
  <h2>What is the longest word you can find?</h2>
  <form action="/score" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letter_list %>
    <input type="text" name="word">
    <input type="submit" value="Try my word">
  </form>
</div>
